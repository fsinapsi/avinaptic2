(defnet init-sound ()
        (if (not (cli))
        then    (set <_kv "enabled-sound-alert"> (cfg-get-or-default "enabled-sound-alert" <_kv "default">))
                (set <_kv "soundserver"> (thread-create (netptr init-sound-th) (thread-self))) ))

(defnet init-sound-th (th)
        (deflocal snd)

        (opt (sdl-playwav-memory (raw-load-static "silence.wav") 1.0))
        (repeat (receive snd from th)
                until (= snd undef)
                (opt    (truep <_kv "enabled-sound-alert">)
                        (sdl-playwav-memory snd 1.0)) ))

(defnet sound-quit ()
        (if (not (cli))
        then    (send undef to <_kv "soundserver">)
                (thread-join <_kv "soundserver">) ))

(defnet sound-alert ()
        (if (not (cli))
        then    (send (raw-load-static "alert.wav") to <_kv "soundserver">) ))

