(defglobal _db _kv)

(defnet init ()
        (set _kv (assoc))
        (set <_kv "da-chiudere"> (queue))
        (init-parse-args)
        (init-db)
        (init-default)
        (init-values)
        (init-magic)
        (init-sound) )

