(defnet init-default-profiles (@a)
        (deflocal i j a)

        (set @a (array (length (default-profiles)) (length (car (default-profiles)))))
        (for i in (default-profiles) do
                (set a <@a (for-pos)>)
                (for j in i do
                        (set <a (for-pos)> j) )))

