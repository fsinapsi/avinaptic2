(defnet drf-pix-draw-value (pix value pos)
        (set value (pix-text value))
        (opt (pix-draw-pix pix
                (- (width pix) (width value))
                (- (rint (linear pos 0 1 (- (height pix) 1) 0)) 4)
                value ))
        (close value) )

