(defun drf-graph-width () 500)
(defun drf-graph-height () 180)
(defun drf-graph-descr-width () 56)
(defun drf-graph-mag-step () 0.2)
(defun drf-graph-mag-max () 20)
(defun drf-graph-avg-int-max () 300)

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;;;;                                                                      ;;;;
;;;;                                                                      ;;;;
