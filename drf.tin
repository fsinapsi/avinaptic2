(defnet drf-goto0 (spin hscale)
        (gtk-idle-add (netptr drf-goto) spin hscale) )

(defnet drf-goto (spin hscale)
        (gtk-range-set-value hscale (gtk-spin-button-get-value spin))
        (fail) )

